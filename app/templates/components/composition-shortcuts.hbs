<Shortcut
  @key="command+a"
  @down={{action this.selectAllTags}}
/>
<Shortcut
  @key="esc"
  @down={{action this.deselectAllTags}}
/>
<Shortcut
  @key="right,shift+right,command+right,command+shift+right"
  @down={{action this.nudge 1 0}}
/>
<Shortcut
  @key="left,shift+left,command+left,command+shift+left"
  @down={{action this.nudge -1 0}}
/>
<Shortcut
  @key="down,shift+down,command+down,command+shift+down"
  @down={{action this.nudge 0 1}}
/>
<Shortcut
  @key="up,shift+up,command+up,command+shift+up"
  @down={{action this.nudge 0 -1}}
/>
<Shortcut
  @key="delete,backspace"
  @down={{action this.deleteSelected}}
/>
